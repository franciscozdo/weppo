<!DOCTYPE html>
<html>
<head>
  <%- include('meta') %>
  <script src="/scripts/ajax.js"></script>
  <script src="/scripts/common.js"></script>
  <script src="/scripts/item.js"></script>
  <script src="/scripts/order.js"></script>
  <title id="title"></title>
</head>
<body>
  <%- include('header') %>
  <main class="content">
  <a href="/list/item">Up</a>
  <div id="item">
    <div style="font-size:20px"><span id="itemName"></span></div>
    <div>Price: <span id="itemPrice"></span>$</div>
    <div>Amount: <span id="itemAmount"></span> pcs.</div>
    <div>This item is <span id="itemAvailable"></span>.</div>
    <div id="addToCart">
      <button onclick="buttonAddToCart(<%= itemID %>)">Add to cart</button>
      <input type="number" name="amount" id="orderAmount" min="1" value="1" style="width:50px"/>
    </div>
    <div>
      <a href="/update/item/<%= itemID %>">Modify</a>
    </div>
  </div>
  </main>
  <%- include('footer') %>
  <script>document.onload = insertItem(<%= itemID %>)</script>
</body>
</html>
